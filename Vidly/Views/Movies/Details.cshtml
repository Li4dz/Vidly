@model Vidly.ViewModels.MoviesViewModel   
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>
<ul>
    <li>Genre: @Model.Movie.Genre.Name</li>
    <li>Release Date: @Model.Movie.ReleaseDate.ToString("D")</li>
    <li>Date Added: @Model.Movie.DateAdded.ToString("D")</li>
    <li>Number in Stock: @Model.Movie.NumberInStock</li>
   
</ul>


